<DetectScreen>
    l_active:False
    md_bg_color:app.bgcolor  

    ScrollView:
        MDBoxLayout:
            adaptive_height:True
            #size_hint_y:.999
            orientation:"vertical"
            spacing:3
            MDCard:
                size_hint_y:None
                height:dp(40)
                pos_hint:{"top":1}
                spacing:5
                orientation:"horizontal"
                md_bg_color:app.my_theme_color  
                padding: dp(3)
                elevation:1
                radius: [0,0,10,10]
                MDIconButton:
                    icon:"chevron-left"
                    theme_text_color:"Custom"
                    color:app.my_theme_color
                    pos_hint:{'center_x':.5,'center_y':.5}
                    on_release:app.change_screen("Home")
                MDLabel:
                    text:"Detect a Product"
                    pos_hint:{'center_x':.5,'center_y':.5}
                    font_name:"firabold"
                    theme_text_color:"Custom"
                    color:"#ffffff"
            Widget:
                size_hint_y:None
                height:dp(10)
            MDCard:
                size_hint_y: None
                adaptive_height:True
                md_bg_color:app.cardbg
                pos_hint:{"center_y":.6, "center_x":.5}
                spacing:1
                padding: dp(7)
                #elevation:1
                radius: [10]
                shadow_softness:1
                shadow_offset:(0, 1)
                orientation:'vertical'
                MDLabel:
                    id: label
                    text: "Select product category"
                    adaptive_size: True
                    color:app.textcolor
                    pos: "12dp", "12dp"
                    font_name:"firaregular"
                    bold: True
                Widget:
                    size_hint_y:None
                    height:dp(15)
                MDTextField:
                    id:product_cat
                    
                    hint_text: "Select product Category"
                    readonly: True
                    on_focus: if self.focus: app.show_select_box()
                    mode: "round"
                    
                    required: True
                    line_color_normal: "#fafafa"
                    helper_text_color_normal: app.my_theme_color1

                Widget:
                    size_hint_y:None
                    height:dp(20)

            MDCard:
                size_hint_y: None
                adaptive_height:True
                md_bg_color:app.cardbg
                pos_hint:{"center_y":.6, "center_x":.5}
                spacing:1
                padding: dp(7)
                #elevation:1
                radius: [10]
                shadow_softness:1
                shadow_offset:(0, 1)
                orientation:'vertical'
                MDLabel:
                    id: label
                    text: "Select product name"
                    adaptive_size: True
                    color:app.textcolor
                    pos: "12dp", "12dp"
                    font_name:"firaregular"
                    bold: True
                Widget:
                    size_hint_y:None
                    height:dp(15)
                MDTextField:
                   
                    id:product_name
                    
                    hint_text: "Select product Name"
                    readonly: True
                    on_focus: if self.focus: app.show_select_box2()
                    mode: "round"
                    
                    required: True
                    line_color_normal: "#fafafa"
                    helper_text_color_normal: app.my_theme_color1
                Widget:
                    size_hint_y:None
                    height:dp(20)
                

            MDCard:
                size_hint_y: None
                adaptive_height:True
                md_bg_color:app.cardbg
                pos_hint:{"center_y":.6, "center_x":.5}
                spacing:1
                padding: dp(7)
                #elevation:1
                radius: [10]
                shadow_softness:1
                shadow_offset:(0, 1)
                orientation:'vertical'
                MDLabel:
                    id: label
                    text: "Upload the picture of the product you want to check"
                    size_hint_y:None
                    adaptive_height:True
                    color:app.textcolor
                    pos: "12dp", "12dp"
                    font_name:"firaregular"
                    bold: True
                Widget:
                    size_hint_y:None
                    height:dp(15)
                MDFillRoundFlatButton:
                    id:upbtn
                    icon: "upload"
                    text: "Upload"
                    theme_text_color: "Custom"
                    text_color: "white"
                    theme_icon_color: "Custom"
                    icon_color: "#ffffff"
                    pos_hint:{'center_x':.5}
                    on_release: app.file_manager_open()
                Widget:
                    size_hint_y:None
                    height:dp(20)
            Widget:
                size_hint_y:None
                height:dp(20)
            MDRaisedButton:
                text: "Detect"
                md_bg_color: app.accent
                pos_hint:{'center_x':.5}
                font_name:"firaregular"
                on_release:app.detectproduct()
            MDSpinner:
                id:loader
                pos_hint:{"center_x":.5}
                size_hint: None, None
                size: dp(46), dp(46)
                active:True if root.l_active else False

                